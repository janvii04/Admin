<%- include("../partials/header");%>

<div class="site">
  <a href="/dashboard" style="text-decoration: none;"> DashBoard</a>
</div>
<center><h1>Privacy Policy</h1></center>


<script src="https://cdn.ckeditor.com/ckeditor5/36.0.1/classic/ckeditor.js"></script>

<div class="main-content">
  <section class="section container-box">
    <div class="section-header">
      <div class="section-header-breadcrumb"></div>
    </div>
    <div class="section-body">
      <div class="card">
        <div class="card-body">
          <form method="post" action="/updatePrivacyPolicy" >
            <div class="form-group">
              <label>Title</label>
              <input
                type="text"
                name="title"
                value="<%= privacyData?.title %>"
                class="form-control"
                disabled
              />
            </div>
            <div class="form-group">
              <label>Description</label>
              <textarea
                id="content"
                name="description"
                class="form-control"
                required><%= privacyData?.description %></textarea>
              <input type="hidden" name="id" value="<%= privacyData?.id %>" />
              <input type="hidden" name="type" value="2" />

            </div>
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-success">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</div>

<script>
  ClassicEditor.create(document.querySelector("#content")).catch((error) => {
    console.error(error);
  });
</script>

