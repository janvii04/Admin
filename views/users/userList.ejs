<%- include("../partials/header.ejs"); %>

 <div class="site">
    <a href="/dashboard"> DashBoard</a> 

   </div>

<div class="container">
  <header class="dashboard-header">
    <center><h1>Users</h1></center>
  </header>
  <div class="challenges-table"> 
    <div class="add-user">
      <a href="/addUsers" class="add-user">+ Add User</a>
    </div>
  <main class="dashboard-main">
    <section id="user-data" class="card">
      <div class="search-container">
        <h2><label for="search">Search:</label></h2>
        <input
          id="search"
          type="search"
          placeholder="Type to search..."
          aria-controls="userTable"
        />
      </div>

      <table id="userTable">
        <thead>
          <tr>
            <th>ID</th>
            <th>Image</th>
            <th>Name</th>
            <th>Email</th>
            <th>Action</th>

          </tr>
        </thead>
        <tbody>
          <% user.forEach((user, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><img src="<%=user.image%>" alt="User Image" style="width:50px;height: 50px;"/></td>
                <td><%=user.name %></td>
                <td><%=user.email %></td>
          
              <td>
                <div class="action-buttons">
                  <a href="/editUser/<%= user.id %>">
                      <i class="fas fa-edit"></i>
                    </a>
                  <button class="delete-btn" id="<%= user.id %>">
                    <i class="fas fa-trash"></i>
                  </button>
                </div>
              </td>

            </tr>
          <% }); %>
        </tbody>
      </table>
    </section>
  </main>
</div>


<script src="https://code.jquery.com/jquery-3.6.3.min.js"
  integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" 
  crossorigin="anonymous"></script>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('.delete-btn').forEach((button) => {
        button.addEventListener('click', function () {
          if (confirm('Are you sure you want to delete this item?')) {
            const row = this.closest('tr'); 
            if (row) {
              // row.remove(); 
              $.ajax({
            url: `/deleteUsers/${button.id}`,
            type: 'delete',
            success: function(result) {
             if(result.status == 200){
               window.location.reload()
             }
            }
          })
            } else {
              console.error('No row found to delete.');
            }
          }
        });
      });
    });
  </script>

  <style>
    .add-user {
      background-color: gray;
    color: black;
    padding: 0.3rem 0.5rem;
    text-decoration: none;
    border-radius: 5px;
    font-size:1rem;
    margin-bottom: 0rem;
    float: right;
  
  }
  .action-buttons {
    display: flex;
    align-items: center; 
    gap:10%

  }

  .action-buttons button {
    background-color: #ddd;
    color: black;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .action-buttons i {
    font-size: 1rem;
  }

  
  </style>
