
<%- include("../partials/header.ejs");%>
<div class="site">
    <a href="/dashboard"  style="text-decoration: none;"> DashBoard</a> 
   </div>

   <center><h1>About Us</h1></center>

   <script src="https://cdn.ckeditor.com/ckeditor5/36.0.1/classic/ckeditor.js"></script>
   
   <div class="main-content">
     <section class="section container-box">
       <div class="section-header">
         <div class="section-header-breadcrumb"></div>
       </div>
       <div class="section-body">
         <div class="card">
           <div class="card-body">
             <form method="post" action="/updateAboutUs" >
               <div class="form-group">
                 <label>Title</label>
                 <input
                   type="text"
                   name="title"
                   value="<%= aboutData?.title %>"
                   class="form-control"
                   readonly
                 />
               </div>
               <div class="form-group">
                 <label>Description</label>
                 <textarea
                   id="content"
                   name="description"
                   class="form-control"
                   required><%= aboutData?.description %></textarea>
                 <input type="hidden" name="id" value="<%= aboutData?.id %>" />
                 <input type="hidden" name="type" value="3" />
   
               </div>
               <div class="d-flex justify-content-end">
                 <button type="submit" class="btn btn-success">Submit</button>
               </div>
             </form>
           </div>
         </div>
       </div>
     </section>
   </div>
   
   
<script>
  ClassicEditor.create(document.querySelector("#content"))
    .then(editor => {
      document.querySelector("form").addEventListener("submit", () => {
        document.querySelector("#content").value = editor.getData();
      });
    })
    .catch(error => {
      console.error(error);
    });
</script>
   

